<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/bloque1" />

    <RelativeLayout
        android:id="@+id/recipe_list_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView3"
        android:layout_below="@+id/imageView3"
        android:layout_marginStart="25dp"
        android:layout_marginTop="28dp">

        <TextView
            android:id="@+id/recipe_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/recipe_list_subtitle"
            android:text="Title"
            android:textColor="@color/white_t75"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/recipe_list_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipe_list_title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Subtitle"
            android:textColor="@color/white_t75"
            android:textSize="20sp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/recipe_list_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_alignTop="@+id/recipe_list_text_layout"
        android:layout_marginEnd="24dp"
        android:text="7a+"
        android:textColor="@color/white_t75"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/comentariobloque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/recipe_list_text_layout"
        android:layout_below="@+id/recipe_list_text_layout"
        android:layout_marginTop="19dp"
        android:text="Se sale con dos manos en la presa verde, aguantar tres segundos en el top. No tiene bonus. Pruebalo, puede ser 7a+ hard quizas 7b. ;)" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500 puntos + 250 al flash"
        android:layout_alignStart="@+id/comentariobloque"
        android:layout_below="@+id/comentariobloque"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>