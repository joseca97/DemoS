<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background"
    tools:context="com.example.manuel.demos.ColoreableActivity">

    <ImageView
        android:id="@+id/image_coloreable"
        android:layout_width="250dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/textViewColoreable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image_coloreable"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:text="Here you can edit your boulder image"
        android:textColor="@color/black" />

</RelativeLayout>
